@model Folkin.Models.Kort

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Kort</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Beskivelse)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Beskivelse)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sillhouette)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sillhouette.Id)
            </dd>
            <dt class="col-sm-2">
                Card Tags
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Tags</th>
                    </tr>
                    @foreach (var item in Model.Korts_og_tags)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tags.Titel)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
            <dt class="col-sm-2">
                Card Types
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Types</th>
                    </tr>
                    @foreach (var item in Model.Korts_og_Types)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type.Titel)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    </div>